<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="hotel.HotelAppController" spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="First Name"/>
    <TextField fx:id="firstNameField"/>

    <Label text="Last Name"/>
    <TextField fx:id="lastNameField"/>

    <Label text="Phone"/>
    <TextField fx:id="phoneField"/>

    <Label text="Email"/>
    <TextField fx:id="emailField"/>

    <Label text="Bed Type"/>
    <ComboBox fx:id="bedTypeComboBox" prefWidth="200"/>

    <Label text="Smoking Preference"/>
    <ComboBox fx:id="smokingPreferenceComboBox" prefWidth="200"/>

    <Button text="Search Available Rooms" onAction="#handleSearchRooms"/>
    <Button fx:id="assignButton" text="Assign Room" onAction="#handleAssignRoom"/>

    <Label fx:id="statusLabel" style="-fx-text-fill: green;"/>

    <ListView fx:id="roomListView" prefHeight="200"/>
</VBox>
